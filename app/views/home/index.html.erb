<div class="Container ">
<div class='Form'>
  <%= form_tag( '/resultado' , remote: true) do |f| %>
    
    <label for="operacao">Selecione a operação:</label>
    <%= select_tag 'operacao', options_for_select([['Soma', '+'], ['Subtração', '-'], ['Multiplicação', 'x'], ['Divisão', '÷']]), class: 'operador' %><br>
    
    <%= label_tag :nm1, "Número 1:", class: 'nm1' %>
    <%= text_field_tag :nm1 %><br>

    <%= label_tag :nm2, "Número 2:", class: 'nm2' %>
    <%= text_field_tag :nm2%><br>
    <%= submit_tag 'Calcular', class: 'calcular' %>

  <% end %>
  
</div>

<div class="Form-2">
  <%= form_tag( '/palavras', remote: true) do  %>
      
      <%= label_tag :work, "Digite a palavra: "%>
      <%= text_field_tag :work %>

      <%= label_tag :qnt, "Quantidade: "%>
      <%= text_field_tag :qnt %>

      <%= submit_tag "Enviar" %>
  <% end %>
</div>

<div class="Form-3">
 <%= form_tag('/check_answer', method: 'post') do %>
  <p>
    <%= $num1 %> + <%= $num2  %> = <br>
    Resposta: <%= text_field_tag :tentativa %>

  </p>

  <%= submit_tag 'Verificar' %>

<% end %>
</div>

<div class="Form-4">
  <%= form_tag('/work_random', remote: true) do %> 
  
    <%= label_tag :letras, "Quantidade de Caracter: "%>
    <%= text_field_tag :letras %>
    <%= submit_tag 'Gerar' %>
    
  <% end%>

</div>

<div class="Form-5">

  <%= form_tag('/index', method: :post, remote: true) do %>
  <%= label_tag :palavra, "Palavra: "%>
  <%= text_field_tag :palavra %>

  <%= submit_tag "Inverter" %>

  <% if flash[:notice].present? %>
    <%= flash[:notice] %>
  <% end %>
<% end %>

</div>

</div>